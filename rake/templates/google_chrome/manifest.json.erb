{
  "name": "Careplane",
  "version": "<%= @version %>",
  "description": "Real-time carbon footprints inserted into your favorite travel search sites",
  "content_scripts": [
    {
      "matches": [
        "*://*.hipmunk.com/*",
        "*://hipmunk.com/*",
        "*://*.kayak.com/*",
        "*://kayak.com/*",
        "*://*.orbitz.com/*",
        "*://orbitz.com/*"
      ],
      "css": [<%= @css_files.map { |css| "\"#{css}\"" }.join(',') %>],
      "js": ["application.js"]
    }
  ],
  "background_page": "background.html",
  "options_page": "options.html"
}
